#!/usr/bin/env bash
# bin/detect <build-dir>
set -euo pipefail

BUILDDIR=$1
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
VERSION="$(cat $SCRIPT_DIR/../VERSION)"

if [ $(find "$BUILDDIR" -name '*.php' | wc -l) -gt 0 ]; then
  echo "php $VERSION"
  exit 0
else
  echo "no"
  exit 1
fi
